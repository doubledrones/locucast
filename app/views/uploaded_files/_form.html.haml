= s3_uploader_form id: "s3-uploader", callback_url: chapters_url do
  %button.file-upload{ style: "margin-left: 0; margin-top: 0;" }
    = file_field_tag :file, multiple: true, accept: "audio/mp3", class: "file-input"
    Choose files

:coffeescript
  jQuery ->
    $("#s3-uploader").S3Uploader
      additional_data: { upload_id: "#{@upload.id}" }
    $(document).bind 's3_uploads_complete', ->
      location.href = location.href + "?show_success_upload_flash=true"
